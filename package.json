{
  "name": "darcy",
  "version": "1.0.1",
  "description": "I build things (ie. apps, experiences, companies, teams, communities & culture) I ‚ù§ the web+ux & take a holistic approach to problem solving (dev+des+strategy)",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "lint": "eslint .",
    "admin": "node ./scripts/admin.js",
    "add": "npm run admin -- --add",
    "remove": "npm run admin -- --remove",
    "edit": "npm run admin -- --edit"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darcyclarke/darcy.git"
  },
  "devDependencies": {
    "pre-git": "3.17.1",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-preset-es2015": "6.24.1",
    "eslint": "5.15.2",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-promise": "4.0.1",
    "inquirer": "6.2.2",
    "lowdb": "1.0.0",
    "mocha": "6.0.2",
    "yargs": "13.2.2"
  },
  "keywords": [
    "profile",
    "darcy",
    "darcyclarke",
    "developer",
    "designer",
    "strategy",
    "ux",
    "web",
    "development",
    "node",
    "javascript",
    "oss",
    "css",
    "html"
  ],
  "author": "Darcy Clarke <darcy@darcyclarke.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darcyclarke/darcy/issues"
  },
  "homepage": "https://github.com/darcyclarke/darcy#readme",
  "config": {
    "commit-msg": "conventional",
    "pre-git": {
      "pre-push": [
        "echo 'Pre-push checks...' && exit 0",
        "npm run lint",
        "npm test"
      ]
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
